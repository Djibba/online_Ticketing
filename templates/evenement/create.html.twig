{% extends "base.html.twig" %}

{% form_theme formEvenement 'bootstrap_4_layout.html.twig' %}


{% block body %}
<style>
    .example-wrapper {
        margin: 0px 0px;
        font: 15px/1.5 sans-serif;
        text-align: left;
        padding: 100px;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
<div class="example-wrapper">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="{{ path('app_home') }}">Accueil</a></li>
        </ol>
        <div class="col-md-10 mx-auto">

            <strong>
                <h1>Création d'événement</h1>
            </strong>
            {{ form_start(formEvenement) }}

            {{ form_row(formEvenement.nom, {'attr': { 'placeholder' : "Nom de l'événément"} }) }}
            {{ form_row(formEvenement.image) }}
            {{ form_row(formEvenement.Lieu, {'attr': { 'placeholder' : "Lieu de l'événément"} }) }}
            {{ form_row(formEvenement.Prix, {'attr': { 'placeholder' : "Prix de l'événément"} }) }}
            {{ form_row(formEvenement.categorie) }}

            <div class="row">
                <div class="col-sm-12 text-right">
                    <button type="submit" class="btn btn-primary">Ajouter un Evenement</button>
                </div>
            </div>
            {{ form_end(formEvenement) }}
        </div>
    </div>
</div>
{% endblock %}